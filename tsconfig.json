{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "strictBindCallApply": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true
  }
}
